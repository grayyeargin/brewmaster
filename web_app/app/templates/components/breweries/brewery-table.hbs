<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Beers</th>
      <th>Rating</th>
    </tr>
  </thead>
  <tbody>
  	{{#each breweries as |brewery|}}
			<tr>
	      <td scope="row">{{brewery.name}}</td>
	      <td>{{brewery.state}}</td>
	      <td>{{brewery.beerCnt}}</td>
	      <td>{{brewery.ratingPct}}</td>
	    </tr>
		{{/each}}

	</tbody>
</table>

{{yield}}
